@model GameApp.Models.Cast

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h1 class="text-light">Edit</h1>

<h4 class="text-light">Cast</h4>
<hr />
