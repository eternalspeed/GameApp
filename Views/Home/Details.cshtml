@model GameApp.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-light">Details</h1>

<div class="text-light">
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <img src="@Model.ImageUrl" alt="@Model.GameTitle">
        </dt>
        <dd></dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genere)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genere)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Platform)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Platform)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Engine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Engine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Critic Score
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series.SeriesName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.StudioName)
        </dd>
        <dt>
            <a class="btn btn-outline-primary float-right" asp-controller="Home" asp-action="Awards" asp-route-id="@Model.GameId">See Awards</a>
            <a class="btn btn-outline-primary float-right" asp-controller="Home" asp-action="Casts" asp-route-id="@Model.GameId">See Cast</a>
            <a class="btn btn-outline-primary float-right" asp-controller="Home" asp-action="Reviews" asp-route-id="@Model.GameId">See Reviews</a>
        </dt>
    </dl>
</div>
